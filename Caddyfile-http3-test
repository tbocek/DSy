#Caddyfile-http3
localhost:443 {
  #respond "Hello, world! You're using {http.request.proto}"

  handle_path /api {
    reverse_proxy http://api:8080 {
      header_up Host {upstream_hostport}
      header_up X-Real-IP {remote}
    }
  }

  handle / {
    header Alt-Svc: h3=":443"; ma=86400
    root * /var/www/html
    file_server
  }
}
